        <item name="android:layout_margin">@dimen/phonetic_list_bt_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/phonetic_list_bt_bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/phonetic_list_text</item>
    </style>






</resources>
