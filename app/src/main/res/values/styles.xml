<resources>




    <style name="PhoneticTitleText" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginBottom">@dimen/phonetic_list_bt_margin</item>
        <item name="android:layout_marginLeft">@dimen/phonetic_list_bt_margin</item>
        <item name="android:layout_marginRight">@dimen/phonetic_list_bt_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/phonetic_list_bt_bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16dp</item>
    </style>



    <style name="PhoneticListGridItemText" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
