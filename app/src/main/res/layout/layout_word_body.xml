<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/recite_word_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recite_word_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="复习单词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/theme_bg" />

            <LinearLayout
                android:id="@+id/day_word_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day_word_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="当天背词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/theme_bg" />

            <LinearLayout
                android:id="@+id/unfinished_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unfinished_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="未完成单词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/total_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="我的单词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/theme_bg" />


            <LinearLayout
                android:id="@+id/month_word_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/month_word_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="当月背词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/theme_bg" />

            <LinearLayout
                android:id="@+id/accomplish_count_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_fragment_word_item"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accomplish_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="已完成单词"
                    android:textColor="@drawable/selector_fragment_word_item_text" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />


        <Button
            android:id="@+id/recite_bt"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="45dp"
            android:background="@drawable/selector_fragment_word_start_bt"
            android:gravity="center"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:text="开始背单词"
            android:textColor="@drawable/selector_fragment_word_item_text"
            android:textSize="15dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/theme_bg" />

        <RelativeLayout
            android:id="@+id/phonetic_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_fragment_word_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/icon_phonetic"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_margin_left_and_right"
                android:src="@drawable/ic_phonetic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_text_margin_icon"
                android:layout_toEndOf="@+id/icon_phonetic"
                android:text="音标"
                android:textColor="@drawable/selector_fragment_word_item_text"
                android:textSize="@dimen/item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_left_and_right"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />

        <RelativeLayout

            android:id="@+id/item_ignore_word_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_fragment_word_item"
            android:clickable="true"
            android:focusable="true">


            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/icon_ignore_word"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"

                android:layout_marginStart="@dimen/item_margin_left_and_right"
                android:gravity="center"
                app:citv_border_color="@android:color/white"
                app:citv_fill_color="#a576e7"
                app:citv_text_color="@android:color/white"
                app:citv_text_size="11dp"
                app:citv_text_text="复" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_text_margin_icon"
                android:layout_toEndOf="@+id/icon_ignore_word"
                android:text="已忽略单词"
                android:textColor="@drawable/selector_fragment_word_item_text"
                android:textSize="@dimen/item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_left_and_right"
                android:src="@drawable/ic_arrow" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />

        <RelativeLayout

            android:id="@+id/item_add_word_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_fragment_word_item"
            android:clickable="true">


            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/icon_add_word"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_margin_left_and_right"
                android:gravity="center"
                app:citv_border_color="@android:color/white"
                app:citv_fill_color="#a576e7"
                app:citv_text_color="@android:color/white"
                app:citv_text_size="11dp"
                app:citv_text_text="复" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_text_margin_icon"
                android:layout_toEndOf="@+id/icon_add_word"
                android:text="添加单词"
                android:textColor="@drawable/selector_fragment_word_item_text"
                android:textSize="@dimen/item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_left_and_right"
                android:src="@drawable/ic_arrow" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />

        <RelativeLayout

            android:id="@+id/item_study_setting_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:background="@drawable/selector_fragment_word_item"
            android:clickable="true"
            android:focusable="true">


            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/icon_study_setting_word"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_margin_left_and_right"
                android:gravity="center"
                app:citv_border_color="@android:color/white"
                app:citv_fill_color="#a576e7"
                app:citv_text_color="@android:color/white"
                app:citv_text_size="11dp"
                app:citv_text_text="复" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/item_text_margin_icon"
                android:layout_toEndOf="@+id/icon_study_setting_word"
                android:text="学习设置"
                android:textColor="@drawable/selector_fragment_word_item_text"
                android:textSize="@dimen/item_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_left_and_right"
                android:src="@drawable/ic_arrow" />


        </RelativeLayout>


        <com.snowy.widget.ItemView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:itemView_icon_src="@drawable/ic_phonetic"
            />



        <!--<attr name="itemView_icon_width" format="dimension"/>-->
        <!--<attr name="itemView_icon_height" format="dimension"/>-->
        <!--<attr name="itemView_icon_marginStart" format="dimension"/>-->
        <!--<attr name="itemView_icon_text" format="string"/>-->
        <!--<attr name="itemView_icon_textColor" format="color"/>-->
        <!--<attr name="itemView_icon_textSize" format="dimension"/>-->
        <!--<attr name="itemView_icon_background" format="reference|color"/>-->
        <!--<attr name="itemView_icon_src" format="reference"/>-->
        <!--<attr name="itemView_icon_border_width" format="dimension"/>-->
        <!--<attr name="itemView_icon_border_color" format="color"/>-->
        <!--<attr name="itemView_icon_visibility">-->
            <!---->
            <!---->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg" />


    </LinearLayout>

</ScrollView>
